@using System.Web.UI.WebControls
@using SanalogMarket.Models
@model IEnumerable<SanalogMarket.Models.SubCategory>
<!DOCTYPE html>
<html id="market">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sanalog Market</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="/Content/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Content/OwlCarousel/owlcarousel/assets/owl.carousel.min.css" />
    <link rel="stylesheet" href="/Content/OwlCarousel/owlcarousel/assets/owl.theme.default.min.css" />
</head>
<body style="background: #edf1f2">
    <header>
        <div class="navbar">
            <div class="navbar-header">
                <div class="container">
                    <a class="navbar-brand" href="/Home/Index"><img src="/Images/laksLogo2.png" class="logo" alt=""></a><a style="background: #3f8dbf" class="navbar-toggle btn responsive-menu pull-right" data-toggle="collapse" data-target=".navbar-collapse"><i class='fa fa-bars' style="color:#fff"></i></a>
                </div>
            </div>
            <div class="yamm">
                <div class="navbar-collapse collapse">
                    <div class="container">
                        <a class="navbar-brand" href="/Home/Index"><img src="/Images/laksLogo2.png" class="logo" alt=""></a>

                        <!-- categorilerin sol tarafta olması için ul yi kapatıp açtım --->
                        <ul class="nav navbar-nav dropdown_yaz">
                            </ul>
                        <!-- yeni bir ul açtım-->
                            <ul class="nav navbar-nav">
                                



                                @{


                                    <li>
                                        @{
                                            if (Session["cart"] == null)
                                            {
                                                <a href="/ShoppingCart/Index"><i class="glyphicon glyphicon-shopping-cart"></i> Cart : 0</a>
                                            }
                                            else
                                            {
                                                List<ProductCode> cart = (List<ProductCode>)Session["cart"];
                                                <a href="/ShoppingCart/Index"><i class="glyphicon glyphicon-shopping-cart"></i> @cart.Count</a>
                                            }

                                        }
                                    </li>
                                    if (Session["Name"] != null)
                                    {
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color: red;">@Session["Name"] <span class="caret"></span></a>
                                            <ul class="dropdown-menu">
                                                <li> <a href="@Url.Action("Profile", "User")">My Profile</a></li>
                                                <li> <a href="@Url.Action("Logout", "Home")">Log out</a></li>
                                            </ul>
                                        </li>

                                    }
                                    else
                                    {
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Login</b> <span class="caret"></span></a>
                                            <ul id="login-dp" class="dropdown-menu">
                                                <li>
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <p class="label-success" style="text-align: center; padding: 5px;">Login Sanalog Market </p><br />
                                                            <form class="form" role="form" method="post" action="/User/Login" accept-charset="UTF-8" id="login-nav">
                                                                <div class="form-group">
                                                                    <label class="sr-only" for="Username">Username</label>
                                                                    <input class="form-control" data-val="true" placeholder="Username" data-val-required="Username is required" id="Username" name="Username" type="text" value="">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="sr-only" for="Password">Password</label>
                                                                    <input class="form-control" data-val="true" placeholder="Password" data-val-required="Password is required" id="Password" name="Password" type="password" value="">
                                                                    <div class="help-block text-right"><a href="">Forget the password ?</a></div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                                                                </div>
                                                                <div class="checkbox">
                                                                    <label>
                                                                        <input type="checkbox"> keep me logged-in
                                                                    </label>
                                                                </div>
                                                            </form>
                                                        </div>
                                                        <div class="bottom text-center">
                                                            New here ? <a href="/User/Register"><b>Join Us</b></a>
                                                        </div>
                                                    </div>
                                                </li>
                                            </ul>
                                        </li>
                                        <li>@Html.ActionLink("Register", "Register", "User")</li>

                                    }


                                }

                                <li class="dropdown pull-right searchbox">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-search" style="color:#536a7f"></i></a>
                                    <div class="dropdown-menu">
                                        <form id="search" class="navbar-form search" role="search">
                                            <input style="margin-bottom: 20px;height: 40px" type="search" class="form-control" placeholder="Type to search">
                                            <button style="background-color: #387eaa;" type="submit" class="btn btn-default btn-submit icon-right-open"><i class="fa fa-angle-right"></i></button>
                                        </form>
                                    </div>
                                </li>
                            </ul>

                        
                            
                           
                            
                                    
                           
                                 
                    </div>
                </div>
            </div>
        </div>
    </header>


<div class="container" style="margin-top: 50px;">
    @RenderBody()
</div>

<footer style="background: #000000">
    <div class="container">
        <div class="row">
            <div class="col-lg-4" style="margin-top: 20px">
                <img src="/Images/laksLogo2.png" class="img-responsive" style="width: 40%"/>
                <h2 class="footerHeader">Meet Laks</h2>
                <p class="footerPlink"><a href="#" class="footerLink">About Laks</a></p>
                <p class="footerPlink"><a href="#" class="footerLink">Why buy with us</a></p>
                <p class="footerPlink"><a href="#" class="footerLink">Laks Careers</a></p>
                
                <h2 class="footerHeader">Need Help ?</h2>
                <p class="footerPlink"><a href="#" class="footerLink">Help Center</a></p>
                <p class="footerPlink"><a href="#" class="footerLink">Sanalog Market Terms</a></p>
                <p class="footerPlink"><a href="#" class="footerLink">Autor Terms</a></p>
                <p class="footerPlink"><a href="#" class="footerLink">Sanalog Markert Licanses</a></p>
                <p class="footerPlink"><a href="#" class="footerLink">Contact Laks</a></p>

                <div class="footerSocial">
                    <a href='http://twitter.com/' class="footerSocialLink" target='_blank' ><i class='fa fa-twitter fa-2x'></i></a>

                    <a href='http://www.facebook.com/' class="footerSocialLink" target='_blank'><i class='fa fa-facebook fa-2x'></i></a>

                    <a href='https://plus.google.com/'class="footerSocialLink"  target='_blank'><i class='fa fa-google-plus fa-2x'></i></a>

                    <a href='http://instagram.com/' class="footerSocialLink" target='_blank'><i class='fa fa-instagram fa-2x'></i></a>

                    <a href='https://www.tumblr.com/'class="footerSocialLink" target='_blank'><i class='fa fa-tumblr fa-2x'></i></a>
                </div>
            </div>
            <div class="col-lg-4" style="margin-top: 20px">
                <h2 class="footerHeader">Join our Community</h2>
                <p class="footerPlink"><a href="#" class="footerLink">Home</a></p>
                <p class="footerPlink"><a href="#" class="footerLink">Forums</a></p>
                <p class="footerPlink"><a href="#" class="footerLink">Become an Author</a></p>
                <p class="footerPlink"><a href="#" class="footerLink">Community Meetups</a></p>
                <p class="footerPlink"><a href="#" class="footerLink">Become an Affiliate</a></p>
                <div class="subscribe">
                    <div class="input-group input-group-lg" style="margin-top:15px">
                        <h2 class="footerHeader" style="text-align: center">Email Newsletters</h2>
                        <div class="footerSep"></div>
                        <input type="email" name="EMAIL" class="form-control footerInput" id="mce-EMAIL" placeholder="Email address...">
                        <button type="submit" name="subscribe" id="mc-embedded-subscribe" style="margin-top: 15px" class="btn btn-default">Subscribe!</button>

                    </div>
                </div>
            </div>
            <div class="col-lg-4" style="margin-top: 20px">
                <h2 class="footerHeader" style="text-align: center">News</h2>
                <div class="footerSep"></div>
                <div class="custom1 owl-carousel owl-theme">
                    <div class="item">
                        <p class="footerPlink" style="text-align: center"><a href="#" class="footerLink">Up uzun yollardan gelen herhangi bir içerik buraya yazılabilir</a></p>
                        <p class="footerLink" style="text-align: center; color: #f53644 !important;margin-top:15px">@DateTime.Now.Date.ToString("dd-MM-yyyy")</p>
                    </div>
                    <div class="item">
                        <p class="footerPlink" style="text-align: center;"><a href="#" class="footerLink">Up uzun yollardan gelen herhangi bir içerik buraya yazılabilir 2</a></p>
                        <p class="footerLink" style="text-align: center; color: #f53644 !important;margin-top: 15px">@DateTime.Now.Date.ToString("dd-MM-yyyy")</p>
                    </div>
                </div>
            </div>
        
        </div>
        <div class="row">
            <p class="footerLink" style="text-align: center">&copy; @DateTime.Now.Year - Sanalog Market Place</p>
        </div>
</div>
    
</footer>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

@RenderSection("scripts", required: false)

    <script type="text/javascript">

        $(document).ready(function () {
            $.getJSON('/Home/Get_Cat', null, function (data) {
                var sayac = 0;
                $.each(data, function (i, item) {


                    $(".dropdown_yaz").append('<li class="dropdown sub_olustur' + item.ID + '"><a href="#" class="dropdown-toggle"  data-toggle="dropdown" >' + item.Name + '</a></li>');
                    sub_olusturma(item.ID);

                });
            });

            function sub_olusturma(id) {
                $(".sub_olustur" + id).append('<ul class="dropdown-menu sub_yaz' + id + '">' + '</ul>');
                sub_yaz(id);
            };
            function sub_yaz(id) {
                var deger = id;
                $.getJSON('/Home/Get_Sub', { a: id }, function (data) {
                    $.each(data, function (i, item) {
                        $('.sub_yaz' + deger).append('<li>' + '<a href="#" >' + item.Name + '</a>' + '</li>');
                    });
                });
            };
        });

    </script>
<script src="/Content/IndexLayoutJs.js"></script>
<script src="/Content/OwlCarousel/owlcarousel/owl.carousel.js"></script>
<script src="/Content/OwlCarousel/vendors/highlight.js"></script>
<script src="/Content/OwlCarousel/js/app.js"></script>  

</body>
</html>