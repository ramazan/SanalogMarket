@model SanalogMarket.Models.User

@{
    ViewBag.Title = "Forgotten Account";
}

<div class="container">
    <div id="signupbox" style="margin-top:0px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-heading">
                    Reset Password
                    <div style="float: right; font-size: 85%; position: relative; top: -10px">
                        <a href="/User/Login">Sign in!</a>
                        
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <form id="signupform" class="form-horizontal" role="form" action="/User/NewCreatePassword" method="post">
                    @if(ViewBag.mesaj!=null)
                    {
                        <div id="success" class="alert alert-success">
                            <span>@ViewBag.mesaj</span>
                        </div>
                    }
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <input type="Password" class="form-control"  name="Password" placeholder="Password" required="required" />
                            @Html.ValidationMessageFor(model => model.Email)

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" id="btn-signup" class="btn btn-info" value="End" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}