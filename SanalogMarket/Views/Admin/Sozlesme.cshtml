@model SanalogMarket.Models.Page

@{
    ViewBag.Title = "Sozlesme";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
             @*@Html.EditorFor(model => model.Title, new { @value = "ahsdahadhsjsajkhdsahdjasdjjhasdhjajsdjadha" })
*@ 
                <input class="text-box single-line" data-val="true" data-val-required="Title is required" id="Title" name="Title" type="text" value="@ViewBag.Baslik">
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea data-val="true" data-val-required="Content is required" id="Content" name="Content" rows="20" cols="50">@ViewBag.SozlesmeIcerik</textarea>
                               @Html.ValidationMessageFor(model => model.Content)
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
